<!doctype html>
<html lang="en">
  <head>
    {{> metas }}
    <title>Results</title>
  </head>
  <body>
    <div class="page page-results">
        <div class="weather-card">
            <h2>You searched for: </h2>
            <h1>{{ formattedAddress }}</h1>
            <h2>The current temperature is: </h2>
            <h1>{{ temp }}&#8457;</h1>
            <h2>Today you can expect: </h2>
            <h1>{{ hourlySummary }}</h1>
            <h2>This week you can expect: </h2>
            <h1>{{ dailySummary }}</h1>
            <div class="lookup lookup-results">
              <form class="address-input" action="/" method="POST">
                <input type="text" name="lookupAddress" placeholder="Enter an Address" autocomplete="no" autofocus="no">
                <button class="weather-submit" type="submit">Go</button>
              </form>  
            </div>
        </div>
    </div>
  </body>
</html>